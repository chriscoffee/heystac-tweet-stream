<!DOCTYPE html>
<html>
<head>
  <title>Hey! Stream</title>
  <link href="//fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic|Droid+Serif:400,700,400italic,700italic" media="screen" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.css">
  <style type="text/css">

    body {
      margin: 1em;
      background: white;
      color: #333;
    }

    body,
    h1 {
      font-family: 'Lato', sans-serif;
    }

    .title {
      text-align: center;
      text-transform: uppercase;
      font-size: 5em;
      color: #FB7058;
    }

    .tweet {
      margin: 0.5em 0;
      padding: 1em;
      font-size: 2em;
    }

    .tweet__screen-name {
      color: #555;
    }

    .tweet__text {
      color: #333;
    }

  </style>
</head>
<body>

  <div class="row">
    <div class="large-8 large-centered columns">

      <h1 class='title'>#hello</h1>

      <div id='js-tweets'></div>

    </div>
  </div>

  <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
  <script src="http://js.pusher.com/2.1/pusher.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    var pusher = new Pusher('<%= ENV["PUSHER_PUBLIC_KEY"] %>');
    var channel = pusher.subscribe('main');

    $(function(){
      var $tweets = $('#js-tweets');

      channel.bind('tweet:receive', function(tweet){
        var template = [
          '<div class="tweet">',
            '<strong class="tweet__screen-name">',
              '@' + tweet.user.screen_name,
            '</strong>',
            '<p class="tweet__text">' + tweet.text + '</p>',
          '</div>'
        ];

        $tweets.prepend(template.join(''));
      });
    });
  </script>

</body>
</html>
