<!DOCTYPE html>
<html>
<head>
  <title>Parallax! Stream</title>
  <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic|Droid+Serif:400,700,400italic,700italic" media="screen" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.css">
  <style type="text/css">

    html,
    body {
      padding: 0;
      margin: 0;
    }

    body {
      background: white;
      color: #333;
    }

    body,
    h1 {
      font-family: 'Hack', sans-serif;
    }

    .title {
      text-align: center;
      text-transform: uppercase;
      font-size: 5em;
      background: #A342F8;
      color: white;
    }

    .tweet {
      margin: 0.5em 0;
      padding: 0.5em;
      font-size: 2em;
    }

    .tweet__screen-name {
      color: #bbb;
      padding-bottom: 7px;
      padding-top: 3px;
      padding-right: 10px;
    }

    .tweet__text {

    }

    .tweet__stats {
      font-size: 0.6em;
    }

  </style>
</head>
<body>

  <h1 class='title'><%= ENV['TWITTER_QUERY'] %></h1>

  <div class="row">
    <div class="large-8 large-centered columns">
      <div id='js-tweets'>

        <% @tweets.each do |tweet| %>

          <div class="tweet">
            <strong class="tweet__screen-name" style="background-color:#<%= tweet.user.profile_background_color %>";>
              <%= profile_image(tweet.user.profile_image_url) %>
              <%= tweet.user.screen_name %>
            </strong>

            <p class="tweet__text"><%= tweet.text %></p>
            <p class="tweet__stats">Retweets: <%= tweet.retweet_count %> Favourites: <%= tweet.user.favourites_count %></p>
          </div>

        <% end %>

      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-1.10.1.min.js"></script>
  <script src="https://js.pusher.com/3.1/pusher.min.js"></script>
  <script type="text/javascript">
    var pusher = new Pusher('<%= ENV["PUSHER_KEY"] %>', { encrypted: true });
    var channel = pusher.subscribe('main');

    $(function(){
      var $tweets = $('#js-tweets');

      channel.bind('tweet:receive', function(tweet){
        var template = [
          '<div class="tweet">',
            '<strong class="tweet__screen-name">',
              '@' + tweet.user.screen_name,
            '</strong>',
            '<p class="tweet__text">' + tweet.text + '</p>',
          '</div>'
        ];

        $tweets.prepend(template.join(''));
      });
    });
  </script>

</body>
</html>
